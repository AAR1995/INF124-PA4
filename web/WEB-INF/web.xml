<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>CreateProductGridServlet</servlet-name>
        <servlet-class>CreateProductGridServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductDetails</servlet-name>
        <servlet-class>ProductDetails</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>History</servlet-name>
        <servlet-class>History</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddToCart</servlet-name>
        <servlet-class>AddToCart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SaveOrder</servlet-name>
        <servlet-class>SaveOrder</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteItemFromCart</servlet-name>
        <servlet-class>DeleteItemFromCart</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CreateGeneralProductGrid</servlet-name>
        <servlet-class>CreateGeneralProductPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateDressShoesPage</servlet-name>
        <servlet-class>CreateDressShoesPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateCasualShoesPage</servlet-name>
        <servlet-class>CreateCasualShoesPage</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CreateGeneralProductGrid</servlet-name>
        <url-pattern>/CreateGeneralProductPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateDressShoesPage</servlet-name>
        <url-pattern>/CreateDressShoesPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateCasualShoesPage</servlet-name>
        <url-pattern>/CreateCasualShoesPage</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CreateProductGridServlet</servlet-name>
        <url-pattern>/CreateProductGridServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductDetails</servlet-name>
        <url-pattern>/ProductDetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>History</servlet-name>
        <url-pattern>/History</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddToCart</servlet-name>
        <url-pattern>/AddToCart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SaveOrder</servlet-name>
        <url-pattern>/SaveOrder</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteItemFromCart</servlet-name>
        <url-pattern>/DeleteItemFromCart</url-pattern>
    </servlet-mapping>



    <!--<welcome-file-list>-->
        <!--<welcome-file>DeleteItemFromCart</welcome-file>-->
    <!--</welcome-file-list>-->

</web-app>